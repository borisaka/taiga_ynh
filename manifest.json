{
    "name": "Taiga project manager",
    "id": "taiga",
    "packaging_format": 1,
    "description": {
        "en": "Example package for YunoHost application."
    },
    "license": "free",
    "maintainer": {
        "name": "John doe",
        "email": "john.doe@example.com",
        "url": "http://example.com"
    },
    "requirements": {
        "yunohost": ">> 2.4.0"
    },
    "multi_instance": true,
    "services": [
        "nginx",
        "postgresql",
        "redis-server",
        "rabbitmq",
        "circus"
    ],
    "arguments": {
        "install" : [
            {
                "name": "domain",
		"type": "domain",
                "ask": {
                    "en": "Choose a domain name for taiga"
                },
                "example": "example.com"
            },
            {
                "name": "path",
		"type": "path",
                "ask": {
                    "en": "Choose a path for ynhexample"
                },
                "example": "/taiga",
                "default": "/taiga"
            },
            {
                "name": "admin",
		"type": "user",
                "ask": {
                    "en": "Choose an admin user"
                },
                "example": "johndoe"
            },
            {
                "name": "is_public",
                "type": "boolean",
                "ask": {
                    "en": "Is it a public application?"
                },
                "default": false
            },
            {
                "name": "language",
                "ask": {
                    "en": "Choose the application language"
                },
                "choices": ["en"],
                "default": "en"
            }
        ]
    }
}
